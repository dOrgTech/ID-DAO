{
  "name": "@dorgtech/id-dao-contracts",
  "version": "1.0.0",
  "description": "Identity DAO contracts.",
  "author": "dOrg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dOrgTech/ID-DAO.git"
  },
  "bugs": {
    "url": "https://github.com/dOrgTech/ID-DAO/issues"
  },
  "homepage": "https://github.com/dOrgTech/ID-DAO#readme",
  "scripts": {
    "compile": "truffle compile --all",
    "test": "wait-on tcp:8545 && truffle test",
    "test:env": "ganache-cli",
    "ci": "(npm run test:env &) && npm run test && kill $(lsof -t -i:8545)",
    "deploy:development": "wait-on tcp:8545 && truffle migrate --network development",
    "deploy:rinkeby": "truffle migrate --network rinkeby",
    "coverage": "npx solidity-coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:fix": "npm run lint:js:fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:js": "eslint ./test/**/*.js",
    "lint:js:fix": "eslint --fix ./test/**/*.js"
  },
  "dependencies": {
    "@daostack/arc": "0.0.1-rc.27",
    "@daostack/infra": "0.0.1-rc.14",
    "openzeppelin-solidity": "^2.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-google": "^0.13.0",
    "ganache-cli": "^6.6.0",
    "solhint": "^2.2.0",
    "solidity-coverage": "^0.6.4",
    "solidity-docgen": "^0.3.0-beta.4",
    "truffle": "^5.0.31",
    "truffle-contract": "^4.0.28",
    "truffle-hdwallet-provider": "^1.0.16",
    "truffle-resolver": "^5.0.15",
    "wait-on": "^3.3.0",
    "web3": "^1.0.0-beta.36"
  }
}
